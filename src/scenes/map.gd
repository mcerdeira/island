func _ready():	
	var rand_x = randi() % 36 + 1
	var rand_y = randi() %  20 + 1
	var initial_cell = Vector2(rand_x, rand_y)
	
	# Initialice array with grass
	for x in range(0, 36 + 1):
		terrain.append([])
		for y in range(0, 20 + 1):
			terrain[x].append(0)
				
			
	# Insert Woods
	for i in range(2):
		for y in range(0, 20 + 1):
			for x in range(0, 36 + 1):
				if randi() % 3 == 0 and custom_moment.size() == 0:
					custom_moment = [] + Global.pick_random(woods)
				if custom_moment.size() > 0:
					if terrain[x][y] == 0:
						terrain[x][y] = custom_moment.pop_front()
	
	# Insert Lakes
	for i in range(1):
		for y in range(0, 20 + 1):
